{
  "monitoring": {
    "enabled": true,
    "directories": [
      "C:\\Users\\User\\Documents",
      "C:\\Users\\User\\Desktop"
    ],
    "recursive": true,
    "ignore_patterns": ["*.tmp", "*.log"]
  },
  "canary": {
    "enabled": true,
    "filename": ".opsguard_canary.txt",
    "content": "CANARY_FILE_DO_NOT_MODIFY",
    "hash_algorithm": "sha256"
  },
  "detection": {
    "burst_threshold": {
      "file_changes_per_window": 100,
      "time_window_seconds": 10
    },
    "entropy_monitor": {
      "enabled": true,
      "entropy_threshold": 7.5,
      "min_size_bytes": 10000,
      "sample_bytes": 65536,
      "window_seconds": 5,
      "min_files": 3,
      "min_total_bytes": 500000
    },
    "behavioral_model": {
      "enabled": true,
      "window_size": 30,
      "z_threshold": 3.5,
      "min_samples": 10
    },
    "family_signatures": [
      {
        "family": "STOP/Djvu",
        "extensions": [".djvu", ".djvuu", ".tro", ".pdff"],
        "tokens": ["_readme.txt"]
      },
      {
        "family": "LockBit",
        "extensions": [".lockbit", ".lockbit3"],
        "tokens": ["lockbit"]
      },
      {
        "family": "Conti",
        "extensions": [".conti"],
        "tokens": ["conti"]
      }
    ],
    "cpu_monitor": {
      "enabled": true,
      "interval_seconds": 1,
      "cpu_percent_threshold": 70,
      "write_bytes_threshold": 20000000
    },
    "cli_monitor": {
      "enabled": true,
      "patterns": [
        "vssadmin delete shadows",
        "wmic shadowcopy delete",
        "bcdedit /set {default} recoveryenabled no",
        "wbadmin delete catalog",
        "diskshadow",
        "powershell delete shadowcopy",
        "powershell remove-wmiobject win32_shadowcopy",
        "get-wmiobject win32_shadowcopy",
        "get-ciminstance win32_shadowcopy"
      ]
    },
    "backup_delete_keywords": [
      "vssadmin",
      "wmic",
      "shadowcopy",
      "diskshadow",
      "delete shadows",
      "bcdedit",
      "bootcfg"
    ],
    "suspicious_extensions": [
      ".exe",
      ".dll",
      ".sys",
      ".scr",
      ".com",
      ".locked",
      ".crypt",
      ".encrypted"
    ],
    "extension_anomaly": {
      "random_suffix_min": 5,
      "random_suffix_max": 8,
      "trigger_count": 5
    },
    "hot_zones": [
      "Documents",
      "Desktop",
      "Pictures",
      "Downloads"
    ],
    "network_monitor": {
      "enabled": false,
      "interval_seconds": 5
    }
  },
  "risk_scoring": {
    "canary_tamper_score": 100,
    "burst_activity_score": 50,
    "backup_deletion_indicator_score": 80,
    "mitigation_threshold": 120,
    "score_decay_per_minute": 5
  },
  "correlation": {
    "alert_threshold": 100,
    "kill_threshold": 200,
    "score_weights": {
      "FILE_BURST": 20,
      "HOTZONE_BURST": 15,
      "EXTENSION_ANOMALY": 50,
      "CPU_IO_SPIKE": 15,
      "BACKUP_TAMPER": 120,
      "CANARY_TAMPER": 100,
      "ENTROPY_SPIKE": 50,
      "ML_BEHAVIOR_ANOMALY": 35,
      "FAMILY_TAG": 40
    }
  },
  "mitigation": {
    "mode": "monitor-only",
    "cooldown_seconds": 30,
    "auto_terminate_on_critical": false,
    "quarantine_enabled": false,
    "quarantine_dir": "./quarantine"
  },
  "playbooks": {
    "enabled": true,
    "dry_run": true,
    "run_in_monitor_mode": true,
    "isolate_network": true,
    "snapshot_enabled": true,
    "snapshot_paths": [
      "C:\\Users\\User\\Documents",
      "C:\\Users\\User\\Desktop"
    ]
  },
  "whitelist": {
    "process_names": [
      "explorer.exe",
      "svchost.exe",
      "bash",
      "python",
      "firefox.exe",
      "chrome.exe",
      "msedge.exe",
      "code.exe",
      "notepad.exe",
      "notepad++.exe",
      "pythonw.exe",
      "conhost.exe",
      "cmd.exe",
      "powershell.exe",
      "winword.exe",
      "excel.exe",
      "outlook.exe",
      "teams.exe",
      "discord.exe",
      "slack.exe",
      "spotify.exe",
      "steam.exe",
      "steamwebhelper.exe"
    ],
    "paths": []
  },
  "logging": {
    "level": "INFO",
    "jsonl_file": "./logs/events.jsonl",
    "csv_file": "./logs/summary.csv",
    "max_age_days": 30
  }
}
